<Window
    x:Class="ReOsuStoryboardPlayer.WPFControl.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ReOsuStoryboardPlayer.WPFControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF"
    Title="MainWindow"
    mc:Ignorable="d">
    <StackPanel>
        <wpf:OpenGLControl Name="MyGLControl" Height="450">
        </wpf:OpenGLControl>
        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
            <Button
                Width="100"
                Padding="20,10,20,10"
                Click="Button_Click">
                Load
            </Button>
            <Button Width="100" Padding="20,10,20,10">Play</Button>
            <Button Width="100" Padding="20,10,20,10">Pause</Button>
        </StackPanel>
    </StackPanel>
</Window>
